<h1><%- title %></h1>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section class="inventory-form-section">
  <form class="inventory-form" action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      required
      pattern="^[A-Za-z0-9]+$"
      title="Use only letters and numbers. No spaces or special characters."
      value="<%= locals.classification_name %>"
    >
    <p class="form-help">
      Classification names cannot contain spaces or special characters.
    </p>
    <button class="btn-primary" type="submit">Add Classification</button>
  </form>
</section>
